{
  "pluginAlias": "WOLZonePlatform",
  "pluginType": "platform",
  "singular": true,
  "fixArrays": true,
  "schema": {
    "type": "object",
    "properties": {
      "zones": {
        "title": "Zones",
        "type": "array",
        "items": {
          "title": "Zone",
          "type": "object",
          "properties": {
            "name": {
              "title": "Name",
              "type": "string",
              "required": true
            },
            "interval": {
              "title": "Interval to check status for changes automatically",
              "description": "Interval in seconds to check for status and update.",
              "type": "number",
              "placeholder": "30",
              "required": true
            },
            "changesForTrigger": {
              "title": "The number of checks necessary to trigger a state change",
              "type": "number",
              "default": "5",
              "required": true
            },
            "devices": {
              "title": "Devices",
              "type": "array",
              "items": {
                "title": "Device",
                "type": "object",
                "properties": {
                  "name": {
                    "title": "Name",
                    "description": "The name of Device",
                    "type": "string",
                    "required": true,
                    "placeholder": "Name"
                  },
                  "platform": {
                    "title": "Platform",
                    "type": "number",
                    "default": 0,
                    "oneOf": [
                      {
                        "title": "Windows",
                        "enum": [
                          0
                        ]
                      },
                      {
                        "title": "Mac OS",
                        "enum": [
                          1
                        ]
                      }
                    ],
                    "required": true
                  },
                  "host": {
                    "title": "IP address or hostname",
                    "type": "string",
                    "required": true,
                    "placeholder": "192.168.0.2"
                  },
                  "strictHostKeyChecking": {
                    "title": "StrictHostKeyChecking",
                    "description": "The SSH option StrictHostKeyChecking is a security feature that affects how SSH verifies the identity of a remote computer when connecting to it.\n\n",
                    "type": "boolean",
                    "default": true,
                    "condition": {
                      "functionBody": "return model.zones[arrayIndices[0]].devices[arrayIndices[1]].platform === 1;"
                    }
                  },
                  "username": {
                    "title": "Username for login",
                    "type": "string",
                    "required": true,
                    "placeholder": "username"
                  },
                  "password": {
                    "title": "Password",
                    "type": "string",
                    "required": true,
                    "placeholder": "password",
                    "condition": {
                      "functionBody": "return model.zones[arrayIndices[0]].devices[arrayIndices[1]].platform === 0;"
                    }
                  },
                  "mac": {
                    "title": "MAC Address",
                    "type": "string",
                    "required": true,
                    "placeholder": "mac address",
                    "pattern": "^([A-Fa-f0-9]{2}:){5}[A-Fa-f0-9]{2}$",
                    "condition": {
                      "functionBody": "return model.zones[arrayIndices[0]].devices[arrayIndices[1]].platform === 0;"
                    }
                  },
                  "wakeGraceTime": {
                    "title": "Wake grace time",
                    "description": "Number of seconds to wait after startup before checking online status and issuing the wake command.",
                    "type": "integer",
                    "required": true,
                    "default": 45
                  },
                  "shutdownGraceTime": {
                    "title": "Shutdown grace time",
                    "description": "Number of seconds to wait after shutdown before checking offline status.",
                    "type": "integer",
                    "required": true,
                    "default": 30
                  },
                  "architecture": {
                    "title": "Architecture",
                    "type": "number",
                    "oneOf": [
                      {
                        "title": "Intel based",
                        "enum": [
                          0
                        ]
                      },
                      {
                        "title": "Apple silicon",
                        "enum": [
                          1
                        ]
                      }
                    ],
                    "required": true,
                    "condition": {
                      "functionBody": "return model.zones[arrayIndices[0]].devices[arrayIndices[1]].platform === 1;"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "layout": [
    {
      "key": "zones",
      "type": "tabarray",
      "title": "{{ value.name || 'new zone' }}",
      "items": [
        "zones[].name",
        {
          "key": "zones[]",
          "type": "fieldset",
          "title": "Advanced",
          "expandable": true,
          "items": [
            "zones[].interval",
            "zones[].changesForTrigger"
          ]
        },
        {
          "key": "zones[]",
          "type": "fieldset",
          "title": "Devices",
          "expandable": true,
          "items": [
            {
              "key": "zones[].devices",
              "type": "tabarray",
              "title": "{{ value.name || 'new device' }}",
              "items": [
                {
                  "key": "zones[].devices[]",
                  "type": "flex",
                  "flex-flow": "row wrap",
                  "notitle": true,
                  "items": [
                    {
                      "key": "zones[].devices[].name",
                      "flex": "1 1 45%"
                    },
                    {
                      "notitle": true,
                      "flex": "1 1 10%"
                    },
                    {
                      "key": "zones[].devices[].platform",
                      "flex": "1 1 45%"
                    }
                  ]
                },
                {
                  "key": "zones[].devices[]",
                  "type": "help",
                  "helpvalue": "<div class=\"alert alert-warning\" role=\"alert\">For work correctly with Windows, you need to make sure that commands from the \"net\" family (to shutdown used the \"net rpc ...\" command) are available on the device with Homebridge.</div>",
                  "condition": {
                    "functionBody": "return model.zones[arrayIndices[0]].devices[arrayIndices[1]].platform === 0;"
                  }
                },
                {
                  "key": "zones[].devices[]",
                  "type": "help",
                  "helpvalue": "<div class=\"alert alert-warning\" role=\"alert\">For work correctly with MacOS, you must first set up SSH and a pair of access keys between your MacOS device and a device with Homebridge.</div>",
                  "condition": {
                    "functionBody": "return model.zones[arrayIndices[0]].devices[arrayIndices[1]].platform === 1;"
                  }
                },
                "zones[].devices[].host",
                "zones[].devices[].username",
                {
                  "key": "zones[].devices[].password",
                  "type": "password"
                },
                "zones[].devices[].mac",
                "zones[].devices[].architecture",
                {
                  "key": "zones[].devices[]",
                  "type": "flex",
                  "flex-flow": "row",
                  "notitle": true,
                  "items": [
                    {
                      "key": "zones[].devices[].wakeGraceTime",
                      "flex": "1 1 45%"
                    },
                    {
                      "notitle": true,
                      "flex": "1 1 10%"
                    },
                    {
                      "key": "zones[].devices[].shutdownGraceTime",
                      "flex": "1 1 45%"
                    }
                  ]
                }
              ]
            }
          ]
        }
      ]
    }
  ]
}